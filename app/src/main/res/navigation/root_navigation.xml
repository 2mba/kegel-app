<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation"
    app:startDestination="@+id/screen_home">

    <fragment
        android:id="@+id/screen_home"
        android:name="org.tumba.kegel_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_screen_home_to_screen_exercise"
            app:destination="@id/screen_exercise"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />

    </fragment>

    <fragment
        android:id="@+id/screen_notifications"
        android:name="org.tumba.kegel_app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />


    <fragment
        android:id="@+id/screen_exercise"
        android:name="org.tumba.kegel_app.ui.exercise.ExerciseFragment"
        android:label="@string/title_exercise"
        tools:layout="@layout/fragment_exercise">
        <action
            android:id="@+id/action_screen_exercise_to_exerciseResultFragment"
            app:destination="@id/exerciseResultFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit"/>
    </fragment>

    <dialog
        android:id="@+id/exerciseResultFragment"
        android:name="org.tumba.kegel_app.ui.exercise.ExerciseResultFragment"
        android:label="ExerciseResultFragment"
        tools:layout="@layout/fragment_exercise_result">
        <action
            android:id="@+id/action_exerciseResultFragment_to_screen_home"
            app:destination="@id/screen_home"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/screen_home"
            app:popUpToInclusive="true"/>
    </dialog>

</navigation>